<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layoutDirection="rtl"
    android:background="@color/colorAccent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radioFatora"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:textColor="#072AEE"
            android:id="@+id/done_seen"
            android:textSize="20dp"
            android:buttonTint="#072AEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تم الأستلام"/>

        <RadioButton
            android:textColor="#4CAF50"
            android:id="@+id/done_done"
            android:textSize="20dp"
            android:buttonTint="#4CAF50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تم التجهيز" />
        <RadioButton
            android:textSize="20dp"
            android:buttonTint="#DA1111"
            android:textColor="#DA1111"
            android:id="@+id/done_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تجميد" />

    </RadioGroup>
    <Button
        android:id="@+id/close_change"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="أغلاق"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:background="@drawable/inputs_des"
        android:layout_below="@id/radioFatora"
        />

</RelativeLayout>