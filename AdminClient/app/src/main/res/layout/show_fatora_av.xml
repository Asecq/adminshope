<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp">

   <ImageView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:id="@+id/close_fatoring"
       android:src="@drawable/xexit"
       android:layout_centerHorizontal="true"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="حفظ الصورة"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/save_fatoring"
        />
    <ImageView
        android:id="@+id/img_fatoring2"
        android:layout_below="@+id/close_fatoring"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_hourglass_full"
        android:layout_height="match_parent" />

</RelativeLayout>