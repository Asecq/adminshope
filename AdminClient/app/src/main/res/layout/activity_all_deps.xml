<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutdeps"
    android:background="@color/colorAccent"
    android:layoutDirection="rtl"
    tools:context=".allDepsActivity">
    <ImageView
        android:id="@+id/logo_dep1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/tower"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/depar_name"
        android:text="الأقسام"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/logo_dep1"
        android:layout_marginTop="20dp"
        />
    <ListView
        android:layout_below="@id/depar_name"
        android:id="@+id/listview_deps"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</RelativeLayout>