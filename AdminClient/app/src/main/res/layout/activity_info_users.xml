<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".InfoUsers">
    <TextView
        android:id="@+id/title_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المستخدمين"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="29dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        />
    <ImageView
        android:id="@+id/refreshs"
        android:src="@drawable/ic_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        />
    <View
        android:id="@+id/view_users_1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:layout_below="@id/title_users"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re_users"
        android:layout_below="@id/view_users_1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>