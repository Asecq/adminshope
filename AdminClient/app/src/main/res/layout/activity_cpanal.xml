<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Cpanal">

    <RelativeLayout
        android:id="@+id/liner_cpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/welcome_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="لوحة تحكم التطبيق"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/liner_cpanal"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/liner_cpp"
        android:background="#003D5B"
        android:layout_width="180dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/test_img_dep"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/programing"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/test_text_dep"
            android:layout_below="@id/test_img_dep"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="عدد الأقسام"
            />
        <TextView
            android:id="@+id/dep_num"
            android:text=""
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_text_dep"
            android:textColor="#00AAFF"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/liner_cpanal2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/liner_cpp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:background="#003D5B"
        android:layout_width="180dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/test_img_users"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/programing"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/test_text_users"
            android:layout_below="@id/test_img_users"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="عدد المستخدمين"
            />
        <TextView
            android:id="@+id/users_num"
            android:text=""
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_text_users"
            android:textColor="#00AAFF"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/liner_cpanal4"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/liner_cpanal"
        android:background="#003D5B"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_width="180dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/test_img_orders"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/programing"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/test_text_orders"
            android:layout_below="@id/test_img_orders"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="الفاتورات"
            />
        <TextView
            android:id="@+id/orders_num"
            android:text=""
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_text_orders"
            android:textColor="#00AAFF"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/liner_cpanal3"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/liner_cpanal2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"

        android:background="#003D5B"
        android:layout_width="180dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/test_img_posts"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/programing"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/test_text_posts"
            android:layout_below="@id/test_img_posts"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="عدد المنشورات"
            />
        <TextView
            android:id="@+id/posts_num"
            android:text=""
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_text_posts"
            android:textColor="#00AAFF"
            />


    </RelativeLayout>
    <Button
        android:id="@+id/add_dep_cpanal"
        android:layout_below="@id/liner_cpanal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_des"
        android:layout_marginTop="40dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:text="اضافة قسم جديد"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17dp"
        />
    <Button
        android:id="@+id/add_user_cpanal"
        android:layout_below="@id/add_dep_cpanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_des"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:text="اضافة مستخدم جديد"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17dp"
        />
    <Button
        android:id="@+id/add_marka_cpanal"
        android:layout_below="@id/add_user_cpanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_des"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:text="اضافة ماركة جديدة"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17dp"
        />
    <Button
        android:id="@+id/add_post_cpanal"
        android:layout_below="@id/add_marka_cpanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_des"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:text="اضافة منشور جديد"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17dp"
        />
    <Button
        android:id="@+id/add_admin_cpanal"
        android:layout_below="@id/add_post_cpanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_des"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:text="اضافة أدمن جديد"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/logout_deper2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_des"
        android:text="تسجيل خروج"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_below="@id/add_admin_cpanal"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
</ScrollView>