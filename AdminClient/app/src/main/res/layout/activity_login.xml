<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="#4CAF50"
    tools:context=".LoginActivity">
    <TextView
        android:textColor="#1F1700"
        android:textSize="29dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="لوحة التحكم"
        android:id="@+id/losgo_login"
        />
<EditText
    android:textColor="#222221"
    android:textColorHint="#222221"
    android:layout_below="@+id/losgo_login"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:hint="الرقم"
    android:gravity="center"
    android:id="@+id/text_phone"
    android:layout_width="300dp"
    android:layout_height="wrap_content" />
    <EditText
        android:textColor="#222221"
        android:textColorHint="#222221"
        android:layout_below="@+id/text_phone"
        android:layout_marginTop="20dp"
        android:id="@+id/text_pass"
        android:layout_centerHorizontal="true"
        android:hint="كلمة السر"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pass"
        android:id="@+id/loging_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="تسجيل دخول"
        android:background="@drawable/inputs_des"
        />

</RelativeLayout>