<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorAccent"
        tools:context=".EditPost">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copy_edit"
            android:background="@drawable/inputs_des"
            android:layout_margin="10dp"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:text="نسخ البيانات"
            />
        <Button
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:id="@+id/paste_edit"
            android:textSize="13dp"
            android:layout_margin="10dp"
            android:background="@drawable/inputs_des"
            android:layout_below="@id/copy_edit"
            android:textColor="@color/white"
            android:text="لصق البيانات"
            />

        <ImageView
            android:id="@+id/image_proEdit"
            android:src="@drawable/add"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:tooltipText="اضافة صورة"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_imageEdit"
            android:text=" صورة للمنتج"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image_proEdit"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/text_proEdit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_imageEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:hint="الأسم"
            android:textColor="@color/white"
            android:textColorHint="#646060"
            android:theme="@style/CustomEditTextView"
            android:inputType="textImeMultiLine"
            android:background="@drawable/inputs_des"
            />
        <Spinner
            android:layout_below="@id/text_proEdit"
            android:id="@+id/sp_pirceEdit"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:background="#03A9F4"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:text="القسم *"
            android:layout_below="@id/text_proEdit"
            android:layout_alignParentStart="true"
            android:textColor="@color/red"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="الماركة *"
            android:layout_below="@id/text_proEdit"
            android:layout_alignParentEnd="true"
            android:textColor="@color/red"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="اضافة ماركة"
            android:background="@drawable/inputs_des"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_pirceEdit"
            android:id="@+id/post_markaEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"

            />
        <Button
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="العطور"
            android:background="@drawable/inputs_des"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_pirceEdit"
            android:id="@+id/post_depEdit"
            android:layout_alignParentStart="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:gravity="center"
            android:id="@+id/text_priceEdit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_markaEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint= "السعر بالقطعة"
            android:textColorHint="#646060"
            android:inputType="numberDecimal"
            android:textSize="18dp"
            android:theme="@style/CustomEditTextView"
            android:textColor="@color/white"
            android:background="@drawable/inputs_des"
            />
        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cbd_strokeColor="@color/colorPrimaryDark"
            android:layout_below="@id/post_markaEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:id="@+id/check_price1Edit"
            android:layout_marginLeft="15dp"

            android:checked="true"
            />
        <EditText
            android:id="@+id/text_price2Edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_priceEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint= "السعر بالدزرن"
            android:textSize="18dp"
            android:textColorHint="#646060"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:theme="@style/CustomEditTextView"
            android:textColor="@color/white"
            android:background="@drawable/inputs_des"
            />
        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cbd_strokeColor="@color/colorPrimaryDark"
            android:layout_below="@id/text_priceEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:id="@+id/check_price2Edit"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:id="@+id/text_price4Edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_price2Edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint= "السعر بالسيت"
            android:textSize="18dp"
            android:textColorHint="#646060"
            android:gravity="center"
            android:theme="@style/CustomEditTextView"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            android:background="@drawable/inputs_des"
            />
        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cbd_strokeColor="@color/colorPrimaryDark"
            android:layout_below="@id/text_price2Edit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:id="@+id/check_price4Edit"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:id="@+id/text_price3Edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_price4Edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint= "السعر بالكارتونة"
            android:gravity="center"
            android:textColorHint="#646060"
            android:textSize="18dp"
            android:theme="@style/CustomEditTextView"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            android:background="@drawable/inputs_des"
            />
        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cbd_strokeColor="@color/colorPrimaryDark"
            android:layout_below="@id/text_price4Edit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:id="@+id/check_price3Edit"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/select_priceoneEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="أختر طريقة الشراء الرئيسية"
            android:textColor="@color/white"
            android:layout_below="@id/check_price3Edit"
            />
        <Spinner
            android:layout_marginTop="10dp"
            android:layout_below="@id/select_priceoneEdit"
            android:id="@+id/spinner2Edit"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
        </Spinner>
        <EditText
            android:id="@+id/text_codeEdit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner2Edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint= "الرمز"
            android:textColorHint="#646060"
            android:gravity="center"
            android:theme="@style/CustomEditTextView"
            android:textColor="@color/white"
            android:background="@drawable/inputs_des"
            />
        <EditText
            android:id="@+id/text_modelEdit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_codeEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint="الصنع (أختياري)"
            android:gravity="center"
            android:textColor="@color/white"
            android:textColorHint="#646060"
            android:theme="@style/CustomEditTextView"
            android:inputType="text"
            android:background="@drawable/inputs_des"
            />
        <EditText
            android:id="@+id/text_count1Edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_modelEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint="احتواء الكاترونة بالقطعة (أختياري)"
            android:textColor="@color/white"
            android:textColorHint="#646060"
            android:theme="@style/CustomEditTextView"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/inputs_des"
            />

        <EditText
            android:id="@+id/text_desEdit"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text_count1Edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:hint="الوصف (أختياري)"
            android:textColor="@color/white"
            android:textColorHint="#646060"
            android:theme="@style/CustomEditTextView"
            android:maxLines="5"
            android:maxHeight="100dp"
            android:inputType="text"
            android:background="@drawable/inputs_des"
            />
        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:text="ظهور المنشور"
            android:id="@+id/check_post"
            android:layout_below="@id/text_desEdit"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="1dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"  />
        <Button
            android:id="@+id/btn_add_proEdit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/check_post"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/inputs_des"
            android:layout_marginLeft="100dp"
            android:text="حفظ التعديلات"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/white"
            />

    </RelativeLayout>
</ScrollView>